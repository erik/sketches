<layouts>
    <layout id="NewRouteLayoutFetchLink">
        <label
            text="Fetching..."
            x="center" y="center"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            font="Gfx.FONT_LARGE"
            color="Gfx.COLOR_WHITE"
        />
    </layout>

    <layout id="EmptyLayout">
    </layout>

    <layout id="TodoLayout">
        <label
            text="todo..."
            x="center" y="center"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            font="Gfx.FONT_LARGE"
            color="Gfx.COLOR_WHITE"
        />
    </layout>

    <layout id="ModalLayout">
        <label
            id="title"
            x="center" y="top"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            font="Gfx.FONT_LARGE"
            background="Gfx.COLOR_WHITE"
            color="Gfx.COLOR_BLUE" />
        <text-area
            id="message"
            x="start" y="center"
            width="fill"
            height="50%"
            color="Gfx.COLOR_WHITE"
        />
        <label
            id="button"
            x="center" y="bottom"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            background="Gfx.COLOR_BLUE"
            color="Gfx.COLOR_WHITE" />
    </layout>


    <layout id="ConnectToGcmLayout">
        <label
            x="center" y="65"
            font="Gfx.FONT_SMALL"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            text="Please open the"
        />
        <label
            x="center" y="85"
            font="Gfx.FONT_SMALL"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            text="Garmin Connect App"
            color="Gfx.COLOR_BLUE"
        />
        <label
            x="center" y="105"
            font="Gfx.FONT_SMALL"
            justification="Gfx.TEXT_JUSTIFY_CENTER"
            text="to proceed."
        />
    </layout>
</layouts>