{
  "manifest_version": 2,
  "name": "Price Tracker",
  "version": "1.0",
  "description": "Track product prices from e-commerce sites using LinkedData",

  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Price Tracker",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },

  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },

  "web_accessible_resources": [
    "parser-common.js",
    "popup.html",
    "tracked-items.html"
  ]
}
